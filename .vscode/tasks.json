{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "setup-debug",
            "type": "shell",
            "command": "[ -d \"${cwd}/build-zg-debug\" ] || meson setup build-zg-debug -D optimization=0 -D debug=true -D werror=true -D warning_level=3 -D b_ndebug=false"
        },
        {
            "label": "resetup-debug",
            "type": "shell",
            "command": "meson setup --wipe build-zg-debug -D optimization=0 -D debug=true -D werror=true -D warning_level=3 -D b_ndebug=false"
        },
        {
            "label": "build-debug",
            "type": "shell",
            "command": "meson compile",
            "options": {
                "cwd": "${cwd}/build-zg-debug"
            },
            "dependsOn": "setup-debug",
            "problemMatcher": [
                "$meson-gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "rebuild-debug",
            "type": "shell",
            "command": "meson compile",
            "options": {
                "cwd": "${cwd}/build-zg-debug"
            },
            "dependsOn": "resetup-debug",
            "problemMatcher": [
                "$meson-gcc"
            ],
            "group": {
                "kind": "build"
            }
        },
        {
            "label": "run-debug",
            "type": "shell",
            "command": "./src/ZeGrapher",
            "options": {
                "cwd": "${cwd}/build-zg-debug"
            },
            "dependsOn": "build-debug",
            "problemMatcher": []
        }

        // release

        {
            "label": "setup-release",
            "type": "shell",
            "command": "[ -d \"${cwd}/build-zg-release\" ] || meson setup build-zg-release -D optimization=3 -D debug=false -D b_ndebug=true -D debug_logs=false"
        },
        {
            "label": "resetup-release",
            "type": "shell",
            "command": "meson setup --wipe build-zg-release -D optimization=3 -D debug=false -D b_ndebug=true -D debug_logs=false"
        },
        {
            "label": "build-release",
            "type": "shell",
            "command": "meson compile",
            "options": {
                "cwd": "${cwd}/build-zg-release"
            },
            "dependsOn": "setup-release",
            "problemMatcher": [
                "$meson-gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "rebuild-release",
            "type": "shell",
            "command": "meson compile",
            "options": {
                "cwd": "${cwd}/build-zg-release"
            },
            "dependsOn": "resetup-release",
            "problemMatcher": [
                "$meson-gcc"
            ],
            "group": {
                "kind": "build"
            }
        },
        {
            "label": "run-release",
            "type": "shell",
            "command": "./src/ZeGrapher",
            "options": {
                "cwd": "${cwd}/build-zg-release"
            },
            "dependsOn": "build",
            "problemMatcher": []
        }
    ]
}
